<Window x:Class="ModbusWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModbusWPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid" MouseDown="MainGrid_MouseDown">
        <local:LabeledCheckBox x:Name="Alarm_1" LabelText="Alarm_1" HorizontalAlignment="Left" Margin="32,10,0,0" VerticalAlignment="Top"
                               State="{Binding DataPointsDictionary[Alarm_1].Value, Mode=TwoWay}"/>
        <local:LabeledTextBox x:Name="Alarm_1_Value" LabelText="Alarm_1_Value" HorizontalAlignment="Left" Margin="32,45,0,0" VerticalAlignment="Top"
                              ValueText="{Binding DataPointsDictionary[Alarm_1_Value].Value, Mode=TwoWay,UpdateSourceTrigger=LostFocus}"/>
    </Grid>
</Window>

