<Window x:Class="ModbusWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModbusWPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid" MouseDown="MainGrid_MouseDown" Background="Transparent">
        <local:LabeledCheckBox LabelText="COM_Write" HorizontalAlignment="Left" Margin="32,10,0,0" VerticalAlignment="Top"
                               State="{Binding DataPointsDictionary[COM_Write].Value, Mode=TwoWay}" 
                               IsEnabled="False"/>
        <local:LabeledCheckBox LabelText="Auto_Manual" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top"
                               State="{Binding DataPointsDictionary[Auto_Manual].Value, Mode=TwoWay}"
                               IsEnabled="True"/>
        <local:LabeledCheckBox LabelText="Alarm_1" HorizontalAlignment="Left" Margin="150,170,0,0" VerticalAlignment="Top"
                               State="{Binding DataPointsDictionary[Alarm_1].Value, Mode=TwoWay}" 
                               IsEnabled="False"/>
        <local:LabeledTextBox LabelText="PV" HorizontalAlignment="Left" Margin="32,166,0,0" VerticalAlignment="Top"
                              ValueText="{Binding DataPointsDictionary[PV].Value, Mode=TwoWay,UpdateSourceTrigger=LostFocus}" 
                              IsEnabled="False" Width="66"/>
        <local:LabeledTextBox LabelText="SV" HorizontalAlignment="Left" Margin="32,205,0,0" VerticalAlignment="Top"
                              ValueText="{Binding DataPointsDictionary[SV].Value, Mode=TwoWay,UpdateSourceTrigger=LostFocus}"
                              IsEnabled="True" Width="66"/>
        <local:LabeledTextBox LabelText="Output_Power" HorizontalAlignment="Left" Margin="32,242,0,0" VerticalAlignment="Top"
                              ValueText="{Binding DataPointsDictionary[Output_Power].Value, Mode=TwoWay,UpdateSourceTrigger=LostFocus}"
                              IsEnabled="True"/>
        <local:LabeledTextBox LabelText="Alarm_1_Value" HorizontalAlignment="Left" Margin="150,205,0,0" VerticalAlignment="Top"
                              ValueText="{Binding DataPointsDictionary[Alarm_1_Value].Value, Mode=TwoWay,UpdateSourceTrigger=LostFocus}"
                              IsEnabled="True"/>
    </Grid>
</Window>

