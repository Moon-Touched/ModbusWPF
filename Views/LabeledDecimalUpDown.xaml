<UserControl x:Class="ModbusWPF.Views.LabeledDecimalUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModbusWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding ValueText, RelativeSource={RelativeSource AncestorType=UserControl}}" MinWidth="50"/>
                <Button Style="{StaticResource MaterialDesignIconButton}" Content="+" Width="20" Height="20" Click="Add_Btn_Clicked"/>
                <Button Style="{StaticResource MaterialDesignIconButton}" Content="-" Width="20" Height="20" Click="Sub_Btn_Clicked"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
